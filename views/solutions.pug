extends ../common/pug/templates/_default

block workarea
	+b.section._size_xl._theme_solutions
		+b.grid.inner
			+e.row._align_c
				+e.col_7
					+b.page-title_size_l._theme_dark
						+e.name Корпаративный</br>университет
					include ../components/breadcrumbs/_breadcrumbs_theme_dark
				+e.col_5
					+b.A.image-swap.js-image-swap(data-src= "../assets/images/look_video_hover.png" href="http://www.youtube.com" target="_blank")
						+b.IMG.image.image-swap__item(src= "../assets/images/look_video.png")
	+b.section_size_s._theme_light
		+b.inner
			+b.accordion.js-accordion
				each item in accordion_items
					+e.item
						+e.title= item.title
						+e.text= item.text
	include ../sections/_other_solutions
	include ../sections/_erp
	include ../sections/_our_blog