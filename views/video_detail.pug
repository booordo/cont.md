                +e.item
                    +e.item-header
                        +e.IMG.image(src="/images/Screenshot_5.png")
                        +e.A.link(href="/video/buh-uchet/common-settings/")
                            +b.I.fas.fa-play
                    +e.item-body
                        +e.H4.section Урок 2.1.6
                        +e.H4.title Сервисные настройки
                        +e.P.text Сервисные настройки сделают работу в 1С приятной и удобной, а также сэкономят Ваше время.