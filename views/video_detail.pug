    +b.section._size_xs
        +b.inner
            +b.title Общие настройки. Ввод остатков.
            +b.breadcrumbs.mobile.mobile_hide
                +e.A.link.link(href="/") Главная
                +e.SPAN.separator
                +e.A.link.link(href="/video/") Видео
                +e.SPAN.separator
