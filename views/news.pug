extends layout

block content
	+b.section._size_xs
		+b.inner
			+b.title._size_xl Новости
	+b.section._no-padding
		+b.grid.inner
			+e.row._justify_sb
				+e.col._8._m_12
					+b.H2.title._size_md.mobile_hide Управление финансами
					+b.news-list
						each item in news
							+e.item
								+e.image(style=`background-image: url(${item.img})`)
								+e.H4.title= item.title
								+e.P.text= item.text
								+e.A.link(href= item.link) Читать далее...
					+b.pagination
						+e.A.controls.__arrow_left(href= "#") &laquo;
						+e.A.controls.__page._actived(href= "#") 1
						+e.A.controls.__page(href= "#") 2
						+e.SPAN.space ...
						+e.A.controls.__page(href= "#") 25
						+e.A.controls.__arrow_right(href= "#") &raquo;
				+e.col._4.mobile_hide
					+b.H2.title._size_md Категории статей
					+b.news-category
						each item in news_category
							+e.item
								+e.A.link(href= item.link) #[+e.angle &#x25B8;] !{item.text}
								+e.count= item.count

